{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Cati Docs",
  "colors": {
    "primary": "#2ecc71",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/images/fav_letter_icon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "essentials/audiomessages",
              "essentials/imagesharing",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Authentication & Users",
            "pages": [
              "api-reference/endpoint/register-assistant",
              "api-reference/endpoint/register-appuser",
              "api-reference/endpoint/login-appuser",
              "api-reference/endpoint/connect",
              "api-reference/endpoint/get-user-id"
